<h1>Edit an existing Todo</h1>

<h1>Create a new Todo</h1>
<% if @todo_find.errors.any? %>
  <h2>The following errors prevented the todo from being saved</h2>
  <ul>
    <% @todo_find.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for @todo_find do |f| %>
  <p>
    <%= f.label :name %> <br>
    <%= f.text_field :name %>

  </p>
  <p>
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>  

<%= link_to "Back to todos listing", todos_path %>